extends layout

block content
  div(ng-app="BlankApp" layout="row" layout-align="center center" style="height:100%")
    md-card(ng-controller='SecureChatController')
      md-card-content()
        md-input-container
          label Name
          input(ng-model="name")
      md-card-actions(layout="row" layout-align="center center")
        md-button(class="md-raised md-primary" ng-click="login()") Log in
